<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name=viewport content="width=device-width, initial-scale=1">
  <title>Random | Gallery</title>
  <link rel="icon" href="/images/favicon.ico">
  <script>
    function hideLoading() {
      document.getElementById('loading').style.opacity = '0';
      document.getElementById('loading').style.zIndex = '-1';
    }
  </script>
  <!-- Style.css-->
  <link rel="stylesheet" href="/Css/style.css">
  <link rel="stylesheet" href="fontawesome-all.min.css">
  <!-- Font fontawesome-->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
  <link href="https://fonts.googleapis.com/css?family=Montserrat|Ubuntu" rel="stylesheet">

  <!-- bootstrap and jQuary-->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <!-- JS, Popper.js, and jQuery -->
  <style type="text/css">
    body {
      background-color: #ded7b1;
      background-repeat: no-repeat;
    }

    .image {
      margin: 100px 150px;
      height: 500px;
      width: 500px;
      box-shadow: 0 5px 25px rgba(0, 0, 0, .9);
      z-index: 999999;

    }

    .image1 {
      margin: 5px 5px;
      box-shadow: 0 5px 5px rgba(0, 0, 0, .9);
      z-index: 999999;
    }

    ul.thumb {
      text-decoration: none;
      margin: 0 auto;
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    ul.thumb li {
      list-style: none;
      margin: 0 8px;
    }

    ul.thumb li img {

      box-shadow: 0 5px 25px rgba(0, 0, 0, 0.5);
    }

    .text {
      margin: 100px 100px 100px 0px;
    }

    a {
      text-decoration: none;
      color: black;
    }

    a:hover {
      text-decoration: none;
      color: black;
    }

    @media (max-width:1025px) {
      .image {
        margin: 100px 50px;
        height: 500px;
        width: 500px;

      }

      .text {
        margin: 100px 20px 100px 0px;
      }
    }

    @media (max-width:995px) {
      .image {
        margin: 100px 140px;
        height: 450px;
        width: 450px;

      }

      .text {
        margin: 50px 100px 100px 100px;
      }
    }

    @media (max-width:500px) {
      .image {
        margin: 50px 0px 30px 38px;
        height: 300px;
        width: 300px;

      }

      .text {
        margin: 20px 0px 5px 0px;
      }

    }
  </style>
</head>

<body onload="hideLoading();">

  <div id="loading">
    <div class="spinner-box">
      <div class="pulse-container">
        <div class="pulse-bubble pulse-bubble-1"></div>
        <div class="pulse-bubble pulse-bubble-2"></div>
        <div class="pulse-bubble pulse-bubble-3"></div>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row ">
      <% if(movie) { %>
      <div class="container-fluid col-lg-8 col-md-12 " id="accordionExample">
        <div class="imgBox">
          <a href="/fullview/<%=movie._id%>"><img src="<%- movie.coverImagePath %>" alt="" class="image"></a>
        </div>

      </div>
      <div class="col-lg-4 col-md-12">
        <div class="text">
          <h4><%-movie.name%></h4>
          <hr>
          <p><%-movie.description%></p>
          <hr>
          Size: <%=movie.length %>*<%=movie.width %>
          <hr>
          Price: <%=movie.price %>
          <br><br><br><br>
          <ul class="thumb">
            <li><a href="<%- movie.coverImagePath %>" target="imgbox"><img src="<%- movie.coverImagePath %>" alt="/fullview/<%=movie._id%>" class="image1" height="100px" width="100px"></a></li>
            <li><a href="<%- movie.coverImagePath1 %>" target="imgbox"><img src="<%- movie.coverImagePath1 %>" alt="/fullview/<%=movie._id%>" class="image1" height="100px" width="100px"></a></li>
            <li><a href="<%- movie.coverImagePath2 %>" target="imgbox"><img src="<%- movie.coverImagePath2 %>" alt="/fullview/<%=movie._id%>" class="image1" height="100px" width="100px"></a></li>
          </ul>
        </div>






        <% } %>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-2.2.4.js"></script>
  <script>
    $(document).ready(function() {
      $(".thumb img").click(function(e) {
        e.preventDefault();
        $(".imgBox img").attr("src", $(this).attr("src"));
      })
      $(".thumb img").click(function(f) {
        f.preventDefault();
        $(".imgBox a").attr("href", $(this).attr("alt"));
      })
    });
  </script>
  <a href="https://wa.me/917737845580" class="whatsapp_float" target="_blank"><i class="fab fa-whatsapp"></i></a>
 
</body>

</html>
